<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Toolbar theme-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- SevenWonders Player bar themes for expandable list-->
    <style name="PlayerBarLayoutTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/player_bar_height</item>
        <item name="android:background">@color/pink</item>
    </style>

    <style name="PlayerBarParentTheme">
        <item name="android:layout_height">match_parent</item>"
        <item name="android:paddingEnd">@dimen/player_bar_right_padding</item>
    </style>

    <style name="PlayerBarButtonTheme" parent="PlayerBarParentTheme">
        <item name="android:layout_width">@dimen/player_bar_button_width</item>
        <item name="android:background">@color/pink</item>
        <item name="android:drawableRight">@android:drawable/arrow_down_float</item>
    </style>

    <style name="PlayerBarNameTextTheme" parent="PlayerBarParentTheme">
        <item name="android:layout_width">@dimen/player_bar_name_width</item>
        <item name="android:hint">@string/player_name</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="PlayerBarScoreLabelTheme" parent="PlayerBarParentTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/score</item>
        <item name="android:textSize">@dimen/score_text_size</item>
    </style>

    <style name="PlayerBarScoreAmountTheme" parent="PlayerBarParentTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/defaultScoreAmount</item>
        <item name="android:textSize">@dimen/score_text_size</item>
    </style>

    <!-- Themes for 7 Wonders Score sheet -->
    <!-- Label Themes -->
    <style name="SevenWondersScoreSheetLabelsTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/seven_wonders_label_padding</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Score Themes -->
    <style name="SevenWondersScoreTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/defaultScoreAmount</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>


</resources>
